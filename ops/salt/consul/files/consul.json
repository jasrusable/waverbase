{
  {% if datacenter %}
  "datacenter": "{{ datacenter }}",
  {% endif %}
  {% if is_ui %}
  "ui_dir": "{{ ui_install_path }}/dist",
     {% if ui_public_target %}
  "addresses" : {
    "http": "{{ salt['network.interfaces']()['eth0']['inet'][0]['address'] }}"
     },
     {% endif %}
  {% endif %}
  {% if is_bootstrap %}
  "bootstrap": true,
  {% endif %}
  "domain": "{{ domain }}",
  "data_dir": "{{ home_dir }}/data",
  "server": {{ 'true' if is_server else 'false' }}
}
